# .env file for Keka MCP Server

# Keka API Credentials (Required)
KEKA_CLIENT_ID=your_keka_client_id_here
KEKA_CLIENT_SECRET=your_keka_client_secret_here
KEKA_API_KEY=your_keka_api_key_here
